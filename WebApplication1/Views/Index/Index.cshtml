@model IEnumerable<WebApplication1.Models.CarModel>

@{
    ViewBag.Title = "Index";
}

<h2>Welcom to rent car </h2>

<div>


</div>
<table class="table">
    <tr>
     
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerDay)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerDay)
            </td>
          
            <td>
                @{
                    if (Session["UserType"] == null || Session["UserType"].Equals("Client"))
                    { @Html.ActionLink("Rent", "Details", new { id = item.CarNumber })}

                    else if (Session["UserType"].Equals("Manager"))
                    {
                        @Html.ActionLink("Detail", "Details", new { id = item.CarNumber }) <label> | </label>
                        @Html.ActionLink("Delete", "DeleteCar", new { CarNumber = item.CarNumber });
                    }
                }

            </td>
        </tr>
    }

</table>
