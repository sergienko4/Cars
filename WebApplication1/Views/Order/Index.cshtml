@model IEnumerable<Dal.Model.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Order", "Index", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finish)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Returned)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Returned)
            </td>
            @{

                if (Session["UserType"] != null)
                {
                    if (Session["UserType"].Equals("Manager"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {id = item.OrderID}) |
                            @Html.ActionLink("Details", "Details", new {id = item.OrderID}) |

                        </td>
                    }

                }
            }
        </tr>
    }
    </table>
